{
    "logs": {
        "enabled": true,
        "default": "database",
        "configuration": {
            "database": {
                "target": "FX_Logs",
                // find connection string from config.json's connection string named "log".
                "connectionStringForDb": "config:log",
                "providerType": "TOF.Service.LogServices.Providers.DatabaseLogProvider, TOF.Service.LogServices"
            },
            "file": {
                "target": "$ENV$\\Logs",
                "naming": "$PREFIX$yyyyMMdd",
                "prefx": "",
                "providerType": "TOF.Service.LogServices.Providers.FileLogProvider, TOF.Service.LogServices"
            }
        }
    },

    "services": {
        "TOF.Service.LogServices.ILogProvider": {
            "maps": [
                {
                    "name": "DatabaseLogServiceProvider",
                    "map": "TOF.Service.LogServices.Providers.DatabaseLogProvider",
                    "singleton": "false",
                    "default": true,
                    "assembly": "TOF.Service.LogServices"
                },
                {
                    "name": "FileLogServiceProvider",
                    "map": "TOF.Service.LogServices.Providers.FileLogProvider",
                    "singleton": false,
                    "default": false,
                    "assembly": "TOF.Service.LogServices"
                }
            ]
        }
    },

    "security": {
        "login": {
            "authentication": {
                "emailVerify": true,
                "twoFactor": true
            },
            "lock": {
                "lockDuration": "00:10:00",
                "lockMaxAttempts": 5
            },
            "passwordProtect": {
                "hash": "SHA384",
                "salt": "AutoGenerated"
            }
        },

        "password": {
            "passwordMinLength": 6,
            "passwordMaxLength": 20,
            "passwordStrength": "default",
            "protection": {
                "algorithm": "SHA384",
                "salt": "auto",
                "random": "auto"
            }
        }
    },

    "web:backend": {
        "entryPoint": "~/portalAdmin"
    },

    "web:uploads": {
        "allowUploads": true,
        "maxLength": 0,
        "uploadsContainer": {
            "default:files": {
                "path": "",
                "supportExtensions": ""
            },
            "default:images": {
                "path": "",
                "supportExtensions": ".gif;.jpg;.png;.tif"
            },
            "custom1": {
                "path": "",
                "supportExtensions": ""
            }
        }
    },

    "web.social": {
        "facebook": {
            "useAtUserAuth": "true",
            "key": "",
            "secret": "",
            "redirect": "",
            "scope": "email"
        },
        "google": {
            "key": "",
            "secret": "",
            "redirect": "",
            "scope": "email"
        }
    }
}
